---
title: "My Projects"
layout: "base.njk"
---
<div class="container mt-5">
    <h2 class="text-center">Projects:</h2>
    <div class="row">
        <div class="d-md-flex justify-content-between align-items-center">
            {% for project in collections.projects %}
                {% if project.data.ID == 1 or project.data.ID == 2 or project.data.ID == 3 %}
                    {% include "project-card.njk"%}
                {% endif %}
            {% endfor %}
        </div>
    </div>
    <div class="row">
        {# justify-content-center when < 3 projects #}
        <div class="d-md-flex justify-content-center align-items-center"> 
            {% for project in collections.projects %}
                {% if project.data.ID == 4 or project.data.ID == 5 or project.data.ID == 6 %}
                    {% include "project-card.njk"%}
                {% endif %}
            {% endfor %}
        </div>
    </div>
</div>